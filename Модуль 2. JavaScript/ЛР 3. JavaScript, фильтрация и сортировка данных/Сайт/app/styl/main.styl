flex-mixin()
	display flex
	flex-wrap wrap
	

$bgc_elements = #f1f1f1
$c_active = #f94444
$gap = 1px

body
	display flex
	flex-direction column
	margin 0px 10px 0px 10px
	padding 0
	box-sizing: border-box
	font-family Roboto
	border solid green $gap
	min-height 100v

header
	display flex
	justify-content space-between

	h2
		color grey
		padding 10px
		width 70vw	

.base-search-item
	display flex
	width 30vw
	justify-content flex-end
	align-items center

	input
		height 35px
		width 60vw
		margin 5px

	img
		height 35px
		margin 5px
		padding 2px
		&:hover
			cursor pointer


h1, h2, h3, p
	margin 0


.t-bg-image
	overflow hidden
	height 15vh

	img
		width 100%
		margin -300px 0 -460px 0

nav, div.images, section, table, form
	box-shadow 4px 5px 10px rgba(0, 0, 0, 0.4)
	background $bgc_elements

nav
	&.m-nav
		display flex
		justify-content flex-end
		height: 45px
		font-family Roboto, cursive
		margin 0% 0px 1% 0px

		a
			padding 10px
			color grey
			text-align center
			text-decoration none

			&:hover
				text-decoration none
				color orange

			&.active
				background $c_active
				border solid grey $gap
				color white

div.images
	padding 1% 1.5% 1% 1.5%
	flex-mixin()
	height 100%

	img
		width calc(20% - 10px)
		margin 5px

article
	flex-mixin()
	justify-content space-evenly
	flex-grow 1

	section
		flex-mixin()
		width calc(45% - 10px)
		margin 15px 5px 0px 5px
		height 100%
		justify-content center
		border-radius 5%

		&:hover
			background-color #f1f1ff 

		h3
			width 100%
			text-align center
			color grey

		img
			padding 10px
			max-height 25vh
			min-height 15vh
			border-radius 5%

		p
			padding 0.5% 3% 3% 3%
			text-align justify
			text-align-last center

footer
	flex-shrink 0

@media screen and (max-width: 650px)
	div.images
		flex-mixin()
		text-align center
		padding 0%
		img
			width 95%
	section
		margin 5px, 0px, 5px, 0px

		
@media screen and (max-width: 950px)
	nav
		flex-mixin()
		height auto
		a
			width 50%
			border dashed LightGray $gap

	section
		width 100%
		margin 5px, 0px, 5px, 0px

@import table
@import about