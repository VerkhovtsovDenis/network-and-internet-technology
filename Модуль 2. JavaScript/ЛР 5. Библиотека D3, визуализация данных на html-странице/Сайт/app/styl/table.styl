article
	margin-left 10px
	margin-right 10px
	&.l-special
		justify-content space-between

	.base-table
		width 52vw
		border-bottom $gap solid #ddd
		user-select none
		margin 5px

		tr
			padding 15px
			text-align left
			border-bottom $gap solid #ddd
			user-select none
			&:hover
				background: #04AA6D
				color: #fff
		th
			background-color #04AA6D
			color white
			padding 15px
			text-align center
			border-bottom $gap solid #ddd
			user-select none

		td
			padding-left 5px
			padding-right 5px
			padding-top 3px
			padding-bottom 3px
			text-align left
			border-bottom $gap solid #ddd
			user-select none
	
	.l-settings
		border 1px solid 
		width 40vw

		.module-forms
			display grid
			grid-template-columns repeat(1, 1fr)

			forms(n=2)
				padding 10px
				margin-left 10px
				margin-right 10px

			inline()
				display flex
				width 100%

				input, p
					padding-top 3px
					margin-left 10px

			form.v1
				forms()
				fieldset
					justify-content flex-start

					&.l-visualization
						width 100%

					.base-axis_x, .base-axis_y, .base-axis_z
						text-align center

					.l-inline
						inline()
			form.v2
				forms()
				.l-names
					text-align: center
					.l-inline
						inline()
			#filter, #sort
				forms()
				display grid
				grid-template-rows repeat(7, auto)
				
				.col-2
					display grid
					grid-template-columns 150px auto
					margin 0 
					padding: 0
					input
						margin-left: 30px
					
				.col-5
					display grid
					grid-template-columns: 150px 30px auto 30px auto;
					
				p
					margin 0
					height: 35
				input
					height: 30px
			.block
				display: flex
				margin 5px
				p, input
					padding: 0 10 0 5
				#sortButton, #resetSortButton
					margin 10px

		img
			height 30vh
			width @width/3
			background #fffdd0
			&:hover
				position: absolute; top: 0px; left: 0px;  
				transform scale(3)
			
