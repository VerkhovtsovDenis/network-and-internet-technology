html 
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title
        link(rel="stylesheet", href="css/bootstrap-reboot.min.css")
        link(rel="stylesheet", href="css/main.css")
        script(src="http://d3js.org/d3.v7.min.js") 
	
        include mixin.pug
        include var.pug

    body
        +createHeader(title, find_icon, cloud_icon)

    nav.m-nav
        +createMenu(dictMenu, 'Статистика')
    article.l-special
        .base-table
            +createTable(listTableTitle, table)
        .l-settings
            .module-forms

                form(action="visualizations-graphics").v1
                    fieldset 
                        legend="Настройка визуализации Графика"
                        .l-visualization
                            label="Тип визуализации"
                            select#visualizationType(name="type")
                                each data in visualizationType
                                    option(value=data.value)=data.text
                        .l-visualization
                            label="Функция обработки"
                            select#processingFunction(name="funkck")
                                each data in func
                                    option(value=data.value)=data.text

                        .base-axis_x
                            +createFormAxis("Выбор оси Х", "radio", "groupX", axisX)
                        .base-axis_y
                            +createFormAxis("Выбор оси Y", "checkbox", "groupY", axisY)
                        .l-visualization
                            input#draw(type="button", value="Показать график")
                
                form#filter
                    p.col-2
                        lable="ФИО"
                        input#name(type="text")
                    p.col-2
                        lable="Пол"
                        input#sex(type="text")
                    p.col-2
                        lable="Город"
                        input#sity(type="text")
                    div.col-5
                        label="Возраст"
                        p="От"
                        input#date_bFrom(type="date" min="1930-01-01" max="2025-01-01" value="1930-01-01")
                        p="До"
                        input#date_bTo(type="date" min="1930-01-01" max="2025-01-01" value="2025-01-01")
                    div.col-5
                        label="Результаты теста 1"
                        p="От"
                        input#test1From(type="number")
                        p="До"
                        input#test1To(type="number")
                    div.col-5
                        label="Результаты теста 2"
                        p="От"
                        input#test2From(type="number")
                        p="До"
                        input#test2To(type="number")
                    p.col-2
                        label="Оценка"
                        input#result(type="text")
                    p.col-2 
                        input#searchButton(type="button" value="Найти")
                        input#clearButton(type="button" value="Отчистить фильтр")

                form#sort
                    div.block
                        p="Сортировать по"
                        select#fieldsFirst
                        p="По убыванию?"
                        input#fieldsFirstDesc(type="checkbox")
                    
                    div.block
                        p="Сортировать по"
                        select#fieldsSecond
                        p="По убыванию?"
                        input#fieldsSecondDesc(type="checkbox")
                    div.block
                        p="Сортировать по"
                        select#fieldsThird
                        p="По убыванию?"
                        input#fieldsThirdDesc(type="checkbox")
                    
                    div.block
                        input#sortButton(type="button", value="Сортировать")
                        input#resetSortButton(type="button", value="Сбросить сортировку")

                

                form(action="visualizations-tables").v2
                    fieldset 
                        legend="Параметры отображения таблицы"
                        .l-visualization
                            .l-names
                                each name in listTableTitle
                                    .l-inline
                                        input(type="checkbox", name="vis", value=name, checked)
                                        p=name
                
                    
                            
            img

    footer 
        +createFooter()

    script(src="js/main.js")
    script(src="js/data.js")
    script(src="js/table.js") 

