body
	display: flex
	flex-direction: column
	margin 0px 10px 0px 10px
	padding 0
	box-sizing: border-box
	font-family Roboto
	border solid green 1px
	min-height 100vh


header > h2
	color grey
	border solid grey 1px
	padding 10px

h1, h2, h3, p
	margin 0

nav, div.images, section
	box-shadow 4px 5px 10px rgba(0, 0, 0, 0.4)
	background: #f1f1f1


nav
	display: flex
	justify-content: end
	height: 45px
	font-family Roboto, cursive
	margin .3% 0px 1% 0px

nav>a
	padding 10px
	color grey
	
nav>.active
	background #f94444
	border solid grey 1px
	color white

div.images
	padding 1% 1.5% 1% 1.5%
	flex-wrap nowrap
	height 100%

div.images > img
	width calc(20% - 10px)
	margin 5px

article
	display flex
	flex-wrap wrap
	justify-content center
	flex-grow 1

section
	width calc(25% - 5px*3)
	margin-top 15px
	margin-left 15px
	margin-right 15px
	
	display flex
	flex-wrap wrap
	height 100%
	align-items center

section > h3
	width 100%
	text-align center
	color grey
	

section > img
	padding 10px
	width 35%

section > p
	width 65%
	padding-right 5px
	padding-bottom 5px
	text-align justify
	text-align-last center

footer
	flex-shrink 0

@media screen and (max-width: 650px)
	div.images
		flex-wrap wrap
		text-align center
		padding 0%
	div.images > img
		width 95%
	section
		margin 5px 0px 5px 0px
		
@media screen and (max-width: 950px)
	section
		width 100%
		margin 5px 0px 5px 0px

	section > img
		width 25%
	section > p
		width 75%
		padding 5%
